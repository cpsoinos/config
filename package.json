{
  "name": "@coreyander/eslint-config",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "commit": "commit",
    "lint": "eslint --ext .js,.ts, --fix .",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,vue,md,mdx,gql,graphql,json,yml,yaml}\"",
    "ci:format": "prettier --write --check --no-error-on-unmatched-pattern \"**/*.{js,jsx,ts,tsx,vue,md,mdx,gql,graphql,json,yml,yaml}\"",
    "ci:version": "changeset version",
    "ci:publish": "changeset publish",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@commitlint/prompt-cli": "^16.2.3",
    "@coreyander/eslint-config-base": "workspace:*",
    "@coreyander/prettier-config": "workspace:^0.2.0",
    "eslint": "^8.14.0",
    "husky": "^7.0.4",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4"
  }
}
